<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@drawable/list_view_item_select_background"
              android:gravity="center_vertical"
              android:layout_width="match_parent"
              android:layout_height="@dimen/list_item_height">

    <ImageView
        android:id="@+id/mine_function_item_imageView"
        android:src="@drawable/index_icon"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/mine_function_item_textView"
        android:gravity="center_vertical"
        android:text="@string/login_button"
        android:textSize="@dimen/list_item_title_size"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/mine_function_item_textView_right"
        android:gravity="center_vertical"
        android:layout_marginRight="30dp"
        android:text="备注"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>